<h1><%= @tournament.name %></h1>
<br>
<h4>Entry Fee: $<%= @tournament.entry_fee %></h4>

<h4>Players</h4>
<% @players.each do |p| %>
<%= p.name %>
<br>
<% end %>

<h4>Teams</h4>
<% @tournament.teams.each do |team|%>
<br>
<% @h=0%>
<% @r=0%>
<%= "Team #{@n+=1}" %>
<%= link_to "Enter Team's Score", "/holes/round_entry/teams/#{team.id}"%>
<br>
----------------------------------
<% team.players.each do |player| %>
<%= player.name %>
<br>
<% end %>
<% team.rounds.each do |round| %>
<%= "Round #{@r+=1}" %><br>
<% round.holes.each do |hole| %>
<%= "Hole #{@h+=1}: #{hole.score}" %>
<% end %>
<%= "Total: #{round.round_total}" %>

<br>
<% end %>
<%= "Total Score #{team.total_score}" %>
<% end %>
<br>
<br>

<br>
<br>
