<style>
  .jumbotron {
      background-color: #226F54;
      color: #fff;
  }

  .tournament-index-content {
    position: relative;
  min-height: 100vh;
  }

  .content-wrap {
    padding-bottom: 1.5rem;
  }

  .footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  /* height: 3rem; */
}

.footer-p{
   margin: auto !important;
   width: 100%;
 }

@media(max-width: 500px){
  .jumbotron h1{
    font-size: 2.5rem;
  }
}
@media(min-width: 500px){
  .jumbotron h1{
    font-size: 3rem;
  }
}

@media(min-width: 770px){
  .jumbtron h1{
    font-size: 4rem;
  }
}
</style>
<% if !@tournaments.empty? %>

<div class='tournament-index-content'>
  <%= render 'layouts/navbar' %>
  <div class="container mb-3 content-wrap">
    <header class="jumbotron my-4">
      <h1 class="display-3 text-center">All Tournaments!</h1>
      <p class="lead text-center">Below is a list of all tournaments. To edit or add teams to the tournament you must go to the detail section.</p>
    </header>
    <div class='container'>
      <div class="row ">
        <% @tournaments.each do |t| %>
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="card h-100">
            <img class="card-img-top" src="data:image/png;base64," alt="trophy">
            <div class="card-body">
              <h4 class="card-title"><strong><u><%= t.name %></u></strong></h4>
              <p class="card-text">Date: <%= t.pretty_date if t.date %></p>
              <p class="card-text">Entry Fee: $<%= t.entry_fee %>
              <p class="card-text">Teams Signed up: <%= t.teams.count %>
            </div>
          <div class="card-footer">
        <%= link_to "Details", tournament_path(t), class: "btn btn-primary" %>
        <%= link_to "Start Checkin", "/tournaments/#{t.id}/players_teams/checkin", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
<% end %>
    </div>
    <!-- /.row -->
    <hr>
    <div class='row justify-content-center'>
<%= link_to "Add Golfers to Clubhouse", players_number_path, class: "btn btn-primary m-2" %>
<%= link_to "Add New Tournament", new_tournament_path, class: "btn btn-primary m-2" %>
</div>
  </div>
  </div>
<br>
<br>
  <footer class="py-4 bg-dark footer">
    <div class="container footer-p">
      <p class="m-0 text-center text-white footer-container">Copyright &copy; Tournament Wizard 2020</p>
    </div>
  </footer>
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</div>
<% else%>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" style="background-color: #240115;">
    <div class="container">
      <a class="navbar-brand" href="/">Tournament Wizard</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="<%= user_path(session[:user_id].to_i) %>">Clubhouse</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/tournaments">All Tournaments
            <span class="sr-only">(current)</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/tournaments/new">Create Tournament</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= players_number_path %>">Add Golfers</a>
          </li>
          <li class="nav-item">
            <%= button_to "Logout", logout_path, method: :post %>
          </li>

        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <header class="jumbotron my-4">
      <h1 class="display-3">FORE! It looks like you do not have any tournaments yet!</h1>
        <%= link_to "Add Golfers to Clubhouse", players_number_path, class: "btn btn-primary" %>
        <%= link_to "Add New Tournament", new_tournament_path, class: "btn btn-primary" %>
    </header>
  </div>
<% end %>



