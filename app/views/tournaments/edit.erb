



<%= form_for @tournament do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :date %>
<%= f.date_field :date %>
<%= f.label :entry_fee %>
<%= f.number_field :entry_fee %>
<%= f.label :players_on_team %>
<%= f.number_field :players_on_team %>
<%= f.label :number_of_rounds %>
<%= f.number_field :number_of_rounds %>
<%= f.label :holes_per_round %>
<%= f.number_field :holes_per_round %>
<%= f.hidden_field :user_id, value: session[:user_id] %>

<br>
<br>
<br>
<br>
<%= f.fields_for :teams do |t| %>
<%= t.label "Team #{@n+=1}" %>
----------------------------
<br>
<%= t.fields_for :players_teams do |pt| %>
<%= pt.label "Golfer:" %>
<%= pt.collection_select :player_id, Player.all, :id, :name %>
<br>

<% end %>

<% end %>



<br>
<%= f.submit %>

<% end %>

<%= button_to "Delete Tournament", tournament_path(@tournament), method: :delete %>

