



<%= form_for @tournament do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :date %>
<%= f.date_field :date %>
<%= f.label :entry_fee %>
<%= f.number_field :entry_fee %>
<%= f.label :user_id %>
<%= f.number_field :user_id %>
<%= f.label :team_tournament %>
<%= f.check_box :team_tournament %>
<br>
<%= f.label :teams %>
<%= f.fields_for :teams do |t| %>
<br>
<%= f.label "Team #{@n+=1}" %>
<% @g=0 %>

<%= t.fields_for :players do |p| %>
<%= p.label "Golfer #{@g+=1}" %>
<%= p.collection_select :id, @players, :id, :name  %>
<% end %>
<br>
<% end %>
<br>
<%= f.submit %>

<% end %>
