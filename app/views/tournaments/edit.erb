



<%= form_for @tournament do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :date %>
<%= f.date_field :date %>
<%= f.label :entry_fee %>
<%= f.number_field :entry_fee %>
<%= f.label :user_id %>
<%= f.number_field :user_id %>
<%= f.label :players_on_team %>
<%= f.number_field :players_on_team %>
<br>
<br>
<br>
<br>





<%= f.label :teams %>
<% @tournament.teams.each do |t| %>
<%= "Team #{@n+=1}" %>
<% t.players.each do |p|%>
<%= "Current Player: #{p.name}" %>
<%=  collection_select "team[#{t.id}][player_ids]", p.id, Player.all, :id, :name, multiple: true, prompt: true, selected: p.id%>
<% end %>
<% end %>
<br>
<%= f.submit %>

<% end %>
