<style>
  .golfer-index-content {
    position: relative;
  min-height: 100vh;
  }

  .content-wrap {
    padding-bottom: 1.5rem;
  }

  .footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  /* height: 3rem; */
}

.footer-p{
   margin: auto !important;
   width: 100%;
 }

</style>


<%= render 'layouts/navbar' %>
<div class="golfer-index-content">
  <div class='container'>
    <header class="jumbotron my-4 text-center">
      <h1 class="display-3">All Golfers!</h1>
    </header>
    <div class='content-wrap'>
      <div class="row text-center justify-content-center">
        <% @players.each do |p| %>
        <div class="col-lg-3 col-md-6 mb-4 ">
          <div class="card h-100">
            <div class="card-body">
              <h4 class="card-title"><strong><u><%= p.name %></u></strong></h4>
              <p class="card-text">handicap: <%= p.handicap %></p>
            </div>
          <div class="card-footer">
            <%= link_to "Details", player_path(p), class: "btn btn-primary" %>
          </div>
          </div>
        </div>
    <% end %>
      </div>
  <hr>
  <%= link_to "Add Golfers", players_number_path, class: "w-100 btn btn-primary mb-3"%>

  </div>
  </div>
<br>
<br>

  <footer class="py-4 bg-dark footer">
    <div class="container footer-p">
      <p class="m-0 text-center text-white footer-container">Copyright &copy; Tournament Wizard 2020</p>
    </div>
  </footer>
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</div>