<div class='container'>
  <h1 class="display-2">Edit Team</h1>
  <div class="card text-white bg-dark">
    <div class="card-body">
      <%= form_for @team do |f| %>
      <%= f.label :divison %>
      <%= f.text_field :divison %>
      <%= f.hidden_field :tournament_id, value: @team.tournament_id %>
      <br>
      <%= f.fields_for :players_teams do |pt| %>
      <%= pt.label "Team Member:" %>
      <%= pt.collection_select :player_id, @players, :id, :name %>
      <% end %>
      <br>
      <%= f.submit %>
      <% end %>
      <%= button_to "Delete Team", team_path(@team), method: :delete %>
    </div>
  </div>
</div>